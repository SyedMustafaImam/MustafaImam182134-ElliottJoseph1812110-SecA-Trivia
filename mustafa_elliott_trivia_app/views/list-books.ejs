<!doctype html>
<html lang="en">

<%- include('./partials/head.ejs') %>


<body style="padding-left: 0px;">
    <header>
        <%- include( './partials/nav-admin.ejs') %>

    </header>
    <main>
        <!-- <h1><%=title%></h1> -->

        <div class="row">

            <div class="col 2s">
              <%- include('./partials/dashboard.ejs') %> 


                
                

            </div>
            <div class="container">

                <center>
                    <div class="col 10s" style="padding-left: 100px;">

                        <h2 class="center-align">Books List</h2>
                        <hr>
                        <div class="container" style="border: solid 1px; border-radius: 25px; width: 100%; padding: 50px;">

                          <table class='table table-striped table-responsive-md btm-table'>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Author</th>
                                    <th>Year</th>

                                </tr>
                            </thead>
                            <tbody>
                                <% books.forEach(function(book){ %>
                                    <tr>
                                        <td><%=book.id %></td>
                                        <td><%=book.name %></td>
                                        <td><%=book.author %></td>
                                        <td><%=book.year %></td>
                                        <td>
                                            <form action='updateform/<%=book.id %>' method="POST">
                                                <button type="submit">Update</button>
                                            </form>
                                        </td>
                                        <td>
                                        <form action='<%=book.id %>/delete' method="POST">
                                            <button type="submit">Delete</button>
                                        </form>
                                    </td>                   
                                    </tr>
                                 <% });  %>   
                            </tbody>
                        </table>
                    

                        </div>

                    </div>
                </center>

            </div>


        </div>

    </main>
    <footer>

        <%- include( './partials/footer.ejs') %>

    </footer>


</body>

</html>